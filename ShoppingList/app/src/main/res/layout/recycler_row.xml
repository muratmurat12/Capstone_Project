<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/recyclerViewTextViewName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="book"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/recyclerViewImageViewPrice"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/price"
/>

    <TextView
        android:id="@+id/recyclerViewTextViewPrice"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/recyclerViewImageViewQuantity"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/quantity" />

    <TextView
        android:id="@+id/recyclerViewTextViewQuantity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="15dp"/>

</LinearLayout>